<%- include("_layout/header") -%>  
<h1><%= title %></h1>
<br>
<div class="row products">

    <% products.forEach(function(p){ %>
       
        <div class="col-xs-12 col-md-4">
            <a href="/products/<%= p.category %>/<%= p.slug %>" class="pa">
            <img src="/product_images/<%= p._id %>/<%= p.image %>" alt="Hare bol" class="pimage">
            </a>
            <h3 ><%= p.title %></h3>
            
            <h4>Rs.<%= parseFloat(p.price).toFixed(2) %></h4>
            <a href="/products/<%= p.category %>/<%= p.slug %>" class="vd">View Details</a>
        </div>
        

        <% }) %>
</div>



<%- include("_layout/footer") -%>