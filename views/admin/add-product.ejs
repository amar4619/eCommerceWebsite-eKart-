<%- include("../_layout/adminheader") -%>


<h2 class="page-title">Add a Product</h2>
<a href="/admin/products" class="btn btn-primary">Back to all Products</a>
<br>
<form action="/admin/products/add-product" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Title</label>
        <input type="text" class="form-control" name="title" value="<%= title %>" placeholder="title">
    </div>
    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" class="form-control" cols="30" rows="10" placeholder="description"
            value="<%= desc %>"><%= desc %></textarea>
    </div>


    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control">
            <% categories.forEach(function(cats){ %>
            <option value="<%= cats.slug %>"><%= cats.title  %></option>
            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <label for="">Price</label>
        <input type="text" class="form-control" name="price" value="<%= price %>" placeholder="price">
    </div>
    <div class="form-group">
        <label for="">Qty</label>
        <input type="number" class="form-control" name="qty" value="<%= qty%>" placeholder="Quantity">
    </div>

    <div class="form-group">
        <label for="">Image</label>
        <input type="file" class= "form-control" name="image" id= "img" value="">
        <img src="#" id= "imgPreview" alt="">
    </div>
    <input type="hidden" name="user1" value="<%= user1 %>">
    <input type="hidden" name="nor" value="<%= nor %>">

    <button class="btn btn-danger">Submit</button>

</form>

<script>
    function readURL(input) {
        if(input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e) {
                // console.log(e.target.result);
                
                $("#imgPreview").attr('src',e.target.result).width(100).height(100);
               // console.log($("#imgPreview").attr('src'));
                
            }
            reader.readAsDataURL(input.files[0])
        }
        
    }
    $('#img').change(function() {
        readURL(this);
    })
</script>
<%- include("../_layout/adminfooter") -%>